<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/rgPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbDial"
            style="@style/PhoneTabStyle"
            android:checked="true"
            android:drawableStart="@drawable/ic_phone_dial_selector"
            android:text="@string/to_call" />

        <RadioButton
            android:id="@+id/rbRecord"
            style="@style/PhoneTabStyle"
            android:drawableStart="@drawable/ic_phone_record_selector"
            android:text="@string/record" />

        <RadioButton
            android:id="@+id/rbBook"
            style="@style/PhoneTabStyle"
            android:drawableStart="@drawable/ic_phone_book_selector"
            android:text="@string/contact" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>